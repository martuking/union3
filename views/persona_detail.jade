extends layout

block content
  h1 #{title}: #{persona.title}
  
  p #[strong Persona:] 
    a(href=persona.url) #{persona.nombre}
  p #[strong Apellido Paterno:] #{persona.apellido1}
  p #[strong Apellido Materno:] #{persona.apellido2}
  p #[strong Rut:] #{persona.rut}
    
  div(style='margin-left:20px;margin-top:20px')
    h4 Copies
    
    each val in persona_instances
      hr
      if val.status=='Available'
        p.text-success #{val.status}
      else if val.status=='Maintenance'
        p.text-danger #{val.status}
      else
        p.text-warning #{val.status} 
      p #[strong Imprint:] #{val.imprint}
      if val.status!='Available'
        p #[strong Due back:] #{val.due_back}
      p #[strong Id:]&nbsp;
        a(href=val.url) #{val._id}
 
    else
      p There are no copies of this persona in the library.